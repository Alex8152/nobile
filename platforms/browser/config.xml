<?xml version='1.0' encoding='utf-8'?>
<widget id="fonte_viva" version="1.0.0" versionCode="" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Fonte Viva</name>
    <description>Radio web Fonte Viva		</description>
    <author email="nobile@gmail.com" href="http://nobile.com.br">Alexsandro Nunes		</author>
    <preference name="ErrorUrl" value="" />
    <preference name="BackgroundColor" value="" />
    <gap:platform name="android" />
    <icon gap:density="ldpi" gap:platform="android" src="img/36.png" />
    <icon gap:density="mdpi" gap:platform="android" src="img/48.png" />
    <icon gap:density="hdpi" gap:platform="android" src="img/72.png" />
    <icon gap:density="xhdpi" gap:platform="android" src="img/96.png" />
    <icon gap:density="xxhdpi" gap:platform="android" src="img/144.png" />
    <icon gap:density="xxxhdpi" gap:platform="android" src="img/192.png" />
    <access origin="*" />
    <preference name="phonegap-version" value="3.6.3" />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="true" />
    <preference name="ios-statusbarstyle" value="default" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="true" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="EnableViewportScale" value="true" />
    <preference name="MediaPlaybackRequiresUserAction" value="true" />
    <preference name="AllowInlineMediaPlayback" value="true" />
    <preference name="BackupWebStorage" value="cloud" />
    <preference name="TopActivityIndicator" value="gray" />
    <preference name="KeyboardDisplayRequiresUserAction" value="true" />
    <preference name="HideKeyboardFormAccessoryBar" value="true" />
    <preference name="SuppressesIncrementalRendering" value="true" />
    <preference name="android-minSdkVersion" value="7" />
    <preference name="android-installLocation" value="internalOnly" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="KeepRunning" value="true" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="LoadingDialog" value="," />
    <preference name="LoadUrlTimeoutValue" value="20000" />
    <preference name="disable-cursor" value="true" />
</widget>
